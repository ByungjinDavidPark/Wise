<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="null"
        android:id="@+id/uploadQuestionPath" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_space"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:id="@+id/uploadQuestionTitle" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add title of your question here"
        android:id="@+id/uploadQuestionTitleText" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_space"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_space"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Content"
        android:id="@+id/uploadQuestionContent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:hint="Add content of your question here"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/uploadQuestionContentText" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_space"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/uploadQuestionSubmit"
        android:layout_gravity="center_horizontal" />
</LinearLayout>